---
interface Props {
  title?: string;
}
const { title } = Astro.props;
const base = "text-blue-600 hover:text-blue-800";
---

<nav class="flex pb-2 mb-6 flex-col">
  <span class="flex gap-x-10">
    <span class="font-bold">
      ~ /
      <a href="/" class={base}>home</a> /
      <a href="/blog" class={base}>blog</a> /
      <a href="/project" class={base}>projects</a> /
      <a href="/now" class={base}>now</a>
      {
        title ? (
          <span>
            / <span>{title}</span>
          </span>
        ) : (
          ""
        )
      }
    </span>
  </span>
</nav>
